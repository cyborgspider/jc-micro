input.parsley-success
select.parsley-success
textarea.parsley-success 
  border-color #fff

input.parsley-error
select.parsley-error
textarea.parsley-error 
  border-color #0083fc

.parsley-errors-list 
  color           #0083fc
  font-size       14px
  list-style-type none
  margin          0
  opacity         0
  padding         0 
  transition      opacity 0.2s ease-in

  &.filled
    opacity 1
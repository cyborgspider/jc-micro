body
  -webkit-font-smoothing antialiased
  background             $blue-main
  color                  #fff
  font                   16px "Source Sans Pro", "Arial", sans-serif
  font-weight            400
  position               relative

.container
  width 980px

.container-fluid
  padding 0

  &.split-bg-color
    background linear-gradient(to right, $blue-main-dark 50%, #004687 50%)

  &.split-bg-color-alt
    background linear-gradient(to right, #004687 50%, $blue-main-dark 50%)    

.section
  clear both
  clearfix()

  &:before
    content    ''
    display    block
    height     75px

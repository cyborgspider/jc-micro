.bg-dark
  background #001f3c
  padding    55px 0
  height     330px

.bg-split
  background url(../img/bg-split.png) repeat-y top center

.bg-split-alt
  background url(../img/bg-split-alt.png) repeat-y top center

.bg-fbar
  background      url(../img/bg-fbar.jpg) top center no-repeat
  background-size cover

.bg-fatca
  background      url(../img/bg-fatca.jpg) top center no-repeat
  background-size cover 

.bg-ovdp
  background      url(../img/bg-fbar.jpg) top center no-repeat
  background-size cover  

.bg-disclosure
  background      url(../img/bg-disclosure.jpg) top center no-repeat 
  background-size cover

.content
  padding 60px 0 40px 0

  &.left
    padding-right 60px
    padding-left  60px
  &.right
    padding-left 40px
  &.content-text
    padding-top 40px

  h1 
    font-size     72px
    margin-bottom 12px
    margin-top    -10px
  h2
    font-size     18px
    padding-left  12px
    border-left   3px solid #fff
    margin-bottom 18px
  h3
    font-size     24px    

.section
  clear both

  &:before
    content     ''
    display     block
    margin-top  -75px
    padding-top 75px
    background  transparent
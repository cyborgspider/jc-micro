#main-intro
  background      url(../img/bg-test.jpg) no-repeat center 80%
  background-size cover

#main-intro-wrap
  margin  0 auto
  padding 50px 0 80px
  width   980px

#main-intro-header
  text-align center

  h1
    font-size 45px
  h2
    font-size 22px
    

#main-intro-bar
  background #00284c
  box-shadow 0 1px 0 #0061bb
  width      0
  height     1px
  margin     34px auto

#main-intro-slider
  max-width  660px
  margin     0 auto 80px
  opacity    0
  text-align center

  p
    font-size 18px

.slider-index
  & > li
    background   #002344
    cursor       pointer
    display      inline-block
    height       8px
    margin-right 11px
    width        45px

    &:hover
    &.active
      background #fff

    #main-intro-slider > &
      margin-top 20px
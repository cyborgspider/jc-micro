/* Second Intro */
#intro
  text-align center
  height     637px
  position   relative
  overflow   hidden

  h1
    font-size     45px
    margin-bottom 10px
  h2
    font-size     28px
    font-weight   400
    margin-bottom 24px
  h3
    font-size     22px
    margin-bottom 18px

.divide
  background url(../img/divide.png) no-repeat center top
  width      752px
  height     20px
  margin     0 auto 18px

.video-screen
  position   absolute
  top        0
  left       0
  width      100%
  height     100%
  background url(../img/pattern-screen.png)
  z-index    2

#video
  position absolute
  top      0
  left     0
  width    100%

.slider-container
  background url(../img/bg-slider.png)
  margin     0 auto
  width      892px
  height     637px
  padding    140px 0 0
  position   relative
  z-index    3
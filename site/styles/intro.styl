/* Second Intro */
#intro
  text-align center
  position   relative
  overflow   hidden

  .mobile &
    height 640px

  h1
    font-size     45px
    margin-bottom 10px
  h2
    font-size     28px
    font-weight   400
    margin-bottom 24px
  h3
    font-size     22px
    margin-bottom 18px

.intro-arrow-wrap
  width      62px
  height     62px
  position   relative
  margin     48px auto 0
  cursor     pointer

.intro-arrow-box
  background-color #00386d
  position   absolute
  width      100%
  height     100%
  transition transform 0.2s ease-in-out, background-color 0.2s ease-in-out

  .intro-arrow-wrap:hover &
    transform        rotate(45deg)
    background-color #002344

.intro-arrow
  transform    rotate(45deg)
  border-top   1px solid #0056a6
  border-right 1px solid #0056a6
  width        30px
  height       30px
  position     absolute
  top          16px
  left         8px
  transition   border-color 0.2s ease-in-out
  animation    pulse 2s ease-in-out infinite

  .intro-arrow-wrap:hover &
    border-color #fff


.divide
  background url(../img/divide.png) no-repeat center top
  width      752px
  height     20px
  margin     0 auto 18px

.video-container
  position   absolute
  height     100%
  width      100%
  overflow   hidden
  background $blue-main-dark

.video-screen
  position   absolute
  top        0
  left       0
  width      100%
  height     100%
  background url(../img/pattern-screen.png)
  z-index    2

#video
  min-width  100%
  min-height 100%

#intro-slider
  background url(../img/bg-diamond.png) 50% 50% no-repeat
  position   absolute
  height     100%
  top        0
  left       0
  right      0
  bottom     0
  z-index    3

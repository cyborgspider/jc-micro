.quote
  max-width  760px
  margin     0 auto
  text-align center
  color $blue-text

.quote-text
  font          italic 18px/32px 'Georgia', serif
  position      relative
  padding       30px 0
  margin-bottom 50px

  &:before
    content     "\201C"
    font-size   92px
    position    absolute
    top         0
    margin-left -24px
    left        50%

  &:after
    content     "\201D"
    font-size   92px
    position    absolute
    bottom      -60px 
    margin-left -24px 
    left        50% 

 .quote-attr
   font-style  italic
   font-weight 700
   font-size   20px